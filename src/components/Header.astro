---
import { getI18N } from "./i18n";
const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });
---

<section class="mt-18 flex flex-col items-center text-center">
  <h1 class="text-white text-6xl md:text-6xl mt-6">{i18n.header.title}</h1>
  <h2 class="text-gray-400 text-lg md:text-2xl mt-4">{i18n.header.available}</h2>
  <div class="px-6">
    <img
      src="/app.webp"
      alt="Play Logo"
      class="mt-6 rounded-md w-full max-w-[1000px] shadow-xl shadow-green-900 animate-slide-up-fade"
    />
  </div>
</section>
