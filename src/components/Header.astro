---
import { getI18N } from "./i18n";
const { currentLocale } = Astro
const i18n = getI18N({ currentLocale })
---

<section class="mt-18 flex flex-col items-center">
  <h1 class="text-white text-7xl mt-6">{i18n.header.title}</h1>
  <h2 class="text-green-700 text-6xl mt-8">{i18n.header.subtitle}</h2>
  <h3 class="text-gray-400 text-xl mt-8">{i18n.header.available}</h3>
  <img
    src="/app.webp"
    alt="Played"
    class="mt-8 rounded-md w-[1000px] shadow-2xl shadow-green-700 animate-slide-up-fade"
  />
</section>
