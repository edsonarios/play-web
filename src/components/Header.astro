---
import { appName } from "../utils/constants";
import { getI18N } from "./i18n";
const { currentLocale } = Astro
const i18n = getI18N({ currentLocale })
---

<section class="mt-18 flex flex-col items-center">
  <h1 class="text-green-400 text-4xl">{appName}</h1>
  <h2 class="text-white text-7xl mt-4">{i18n.header.title}</h2>
  <h3 class="text-white text-xl mt-8">{i18n.header.subtitle}</h3>
  <img
    src="/app.png"
    alt="Played"
    class="mt-8 rounded-md w-[1000px] shadow-2xl shadow-green-700 animate-slide-up-fade"
  />
</section>
