---
const { src, cls = "" } = Astro.props;
---

<video
  autoplay
  muted
  playsinline
  onclick="this.paused ? this.play() : this.pause()"
  class=`lazy-video rounded-lg h-full object-cover group-hover:scale-105 transition-transform duration-300 aspect-video w-full max-w-[1000px] mt-6 md:mt-0 px-2 md:px-4 ${cls}`
  src={`/media/${src}`}
>
</video>
