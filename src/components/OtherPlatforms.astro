---
import ArrowDown from "../icons/ArrowDown.astro";
import Linux from "../icons/Linux.astro";
import Mac from "../icons/Mac.astro";
import { Download } from "../icons/Platforms";
import Windows from "../icons/Windows.astro";
import { getI18N } from "./i18n";
const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });
const platforms = [
  {
    name: "Windows",
    icon: Windows,
    download: "64 Bit",
    link: "",
  },
  {
    name: "Mac",
    icon: Mac,
    download: "Universal",
    link: "",
  },
  {
    name: "Linux",
    icon: Linux,
    download: "64 Bit",
    link: "",
  },
];
---

<section class="body-font">
  <div class="container px-5 mt-4 mx-auto">
    <header class="flex items-center justify-center text-center">
      <div class="flex items-center sm:text-3xl font-medium title-font mb-4">
        <h2 class="text-white text-base mr-4">{i18n.otherPlatforms.title}</h2>
        <ArrowDown />
      </div>
    </header>

    <div class="animate-slide-in-top">
      <div class="flex flex-col justify-center items-center mt-6 mb-10">
        <div class="w-16 h-1 rounded-full bg-indigo-500 inline-flex"></div>
        <h2 class="text-lg title-font font-medium mt-4 mb-3">
          {i18n.otherPlatforms.lastVersion}
        </h2>
      </div>
      <div
        class="flex flex-col md:flex-row sm:-m-4 -mx-4 -mb-10 -mt-4 md:space-y-0 space-y-6 items-center"
      >
        {
          platforms.map((platform) => (
            <div class="p-2 md:w-1/3 flex flex-row md:flex-col text-center items-center">
              <div class="mr-12 md:mr-0">
                <platform.icon />
              </div>
              <div class="flex-grow items-center md:mt-10">
                <h2 class="text-lg title-font font-medium">
                  {platform.name}
                </h2>
                <a
                  class="md:mt-3 text-indigo-500 inline-flex items-center hover:scale-105 transition-all"
                  href={platform.link}
                  target="_blank"
                  rel="noopener noreferrer"
                >
                  <h3 class="mr-4">
                    {platform.download} - {i18n.otherPlatforms.download}
                  </h3>
                  <Download />
                </a>
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </div>
</section>
