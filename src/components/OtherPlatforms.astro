---
import ArrowDown from "../icons/ArrowDown.astro";
import Linux from "../icons/Linux.astro";
import Mac from "../icons/Mac.astro";
import { Download } from "../icons/Platforms";
import Windows from "../icons/Windows.astro";
---

<section class="body-font">
  <div class="container px-5 mt-4 mx-auto">
    <header class="flex items-center justify-center text-center">
      <div class="flex items-center sm:text-3xl font-medium title-font mb-4">
        <h2 class="text-white text-base mr-4">Otras Plataformas</h2>
        <ArrowDown />
      </div>
    </header>

    <div class="animate-slide-in-top">
      <div class="flex flex-col justify-center items-center mt-6 mb-10">
        <div class="w-16 h-1 rounded-full bg-indigo-500 inline-flex"></div>
        <h2 class="text-lg title-font font-medium mt-4 mb-3">
          Ultima version: 1.4.0
        </h2>
      </div>
      <div
        class="flex flex-wrap sm:-m-4 -mx-4 -mb-10 -mt-4 md:space-y-0 space-y-6"
      >
        <div class="p-4 md:w-1/3 flex flex-col text-center items-center">
          <Windows />
          <div class="flex-grow mt-10">
            <h2 class="text-lg title-font font-medium mb-3">Windows</h2>
            <button
              class="mt-3 text-indigo-500 inline-flex items-center hover:scale-105 transition-all"
            >
              <h3 class="mr-4">64 Bit - Download</h3>
              <Download />
            </button>
          </div>
        </div>
        <div class="p-4 md:w-1/3 flex flex-col text-center items-center">
          <Mac />
          <div class="flex-grow mt-10">
            <h2 class="text-lg title-font font-medium mb-3">Mac</h2>
            <button
              class="mt-3 text-indigo-500 inline-flex items-center hover:scale-105 transition-all"
            >
              <h3 class="mr-4">Universal - Download</h3>
              <Download />
            </button>
          </div>
        </div>
        <div class="p-4 md:w-1/3 flex flex-col text-center items-center">
          <Linux />
          <div class="flex-grow mt-10">
            <h2 class="text-lg title-font font-medium mb-3">Linux</h2>
            <button
              class="mt-3 text-indigo-500 inline-flex items-center hover:scale-105 transition-all"
            >
              <h3 class="mr-4">64 Bit - Download</h3>
              <Download />
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
